{
  "name": "bossyui",
  "version": "0.0.1",
  "description": "An opinionated set of AngularJS directives used to build rich and interactive web sites.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/buildcom/BossyUI.git"
  },
  "keywords": [
    "bossy",
    "bossyui",
    "angular2"
  ],
  "author": "BossyUI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buildcom/BossyUI/issues"
  },
  "files": [
    "dist/**",
    "src/**",
    "index.*"
  ],
  "scripts": {
    "********************** OLD - TO DELETE **********************": "",
    "concurrently": "concurrently",
    "onchange": "onchange",
    "gulp": "gulp",
    "jsdoc": "jsdoc ./dist/**.js -c jsdoc.json",
    "start": "node site/server.js",
    "heroku-postbuild": "npm run clear:dist && npm run compile:src && npm run compile:site && gulp copy-templates && gulp copy-styles",
    "watch:src": "tsc -w -p tsconfig-sandbox.json",
    "watch:site": "tsc -w -p ./site/tsconfig.json",
    "watch:test": "tsc -w -p ./test/tsconfig.json",
    "compile": "npm run compile:src && npm run compile:site && npm run compile:test",
    "compile:src": "tsc -p tsconfig-sandbox.json",
    "compile:site": "tsc -p ./site/tsconfig.json",
    "compile:test": "tsc -p ./test/tsconfig.json",
    "sandbox": "npm run clear:dist && npm run compile:src && npm run compile:site && gulp copy-templates && gulp copy-styles && npm run sandbox:launch",
    "sandbox:launch": "concurrently \"npm run watch:site\" \"npm run watch:src\" \"npm run bossy-templates\" \"npm run bossy-styles\" \"npm start\"",
    "bossy-templates": "onchange 'src/templates/*.html' -- gulp copy-templates",
    "bossy-styles": "onchange 'src/styles/*.css' -- gulp copy-styles",
    "********************** CLEAR **********************": "",
    "clear:js": "find src -type f \\( -iname '*.js' -o -iname '*.js.map' \\) -delete && rm -f bossy.js bossy.js.map",
    "clear:dts": "find src -type f -iname '*.d.ts' -delete && rm -f bossy.d.ts",
    "clear:test": "find test -type f \\( -iname '*.js' -o -iname '*.js.map' -o -iname '*.d.ts' \\) -delete",
    "clear:metadata": "find src -type f -iname '*.metadata.json' -delete && rm -f bossy.metadata.json",
    "clear:dist": "rm -rf dist",
    "clear:tsc": "npm run clear:js && npm run clear:dts",
    "clear:ngc": "npm run clear:tsc && npm run clear:metadata",
    "clear:npm": "npm run clear && rm -rf node_modules",
    "clear": "npm run clear:ngc && npm run clear:dist && npm run clear:test",
    "********************** TYPESCRIPT **********************": "",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "ngc": "ngc -p tsconfig-bundle.json",
    "********************** LINT **********************": "",
    "tslint": "tslint",
    "lint": "tslint --config tslint.json --format stylish ./site/app/*.ts ./src/**/*.ts ./src/*.ts ./test/*.ts ./test/**/*.ts",
    "********************** TEST **********************": "",
    "test": "npm run compile && gulp copy-templates && gulp copy-styles && karma start",
    "********************** ROLLUP **********************": "",
    "rollup": "rollup -c rollup.config.js",
    "rollup:min": "rollup -c rollup-min.config.js",
    "********************** BUNDLE **********************": "",
    "bundle": "npm run clear && npm run ngc && npm run rollup && npm run rollup:min"
  },
  "dependencies": {},
  "devDependencies": {
    "@angular/cli": "^1.0.1",
    "@angular/common": "^4.1.0",
    "@angular/compiler": "^4.1.0",
    "@angular/compiler-cli": "^4.1.0",
    "@angular/core": "^4.1.0",
    "@angular/forms": "^4.1.0",
    "@angular/http": "^4.1.0",
    "@angular/platform-browser": "^4.1.0",
    "@angular/platform-browser-dynamic": "^4.1.0",
    "@angular/router": "^4.1.0",
    "@types/core-js": "0.9.35",
    "@types/jasmine": "^2.5.41",
    "@types/node": "8.0.27",
    "@types/validate.js": "0.0.2",
    "ace-builds": "^1.2.6",
    "bootstrap": "^4.0.0-alpha.6",
    "concurrently": "^2.2.0",
    "consolidate": "^0.14.1",
    "core-js": "^2.4.1",
    "del": "^1.2.0",
    "dustjs-linkedin": "^2.7.2",
    "express": "^4.13.3",
    "express-livereload": "^0.0.24",
    "glob": "^7.0.3",
    "gulp": "^3.9.1",
    "gulp-help": "^1.6.1",
    "gulp-shell": "^0.5.2",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "onchange": "^2.4.0",
    "reflect-metadata": "^0.1.10",
    "rollup": "^0.49.3",
    "rollup-plugin-angular": "^0.4.4",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^1.0.2",
    "run-sequence": "^1.1.5",
    "rxjs": "^5.1.0",
    "systemjs": "^0.20.12",
    "traceur": "0.0.91",
    "tslint": "^4.4.2",
    "typescript": "^2.0.3",
    "zone.js": "^0.8.4"
  },
  "engines": {
    "node": "=6.x.x",
    "npm": "=5.x.x"
  }
}
